@model EntityFrameworkExample.Models.Product

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Edit</h2>
@using (Html.BeginForm("edit", "product", FormMethod.Post))
{

<div class="form-row">
    <div class="form-group col-md-5">
        @Html.LabelFor(temp => temp.ProductName)
        @Html.TextBoxFor(temp => temp.ProductName, Model.ProductName, new { @class = "form-control" })
        @Html.HiddenFor(temp => temp.ProductID, Model.ProductID)
       
    </div>
    <div class="form-group col-md-5">
        @Html.LabelFor(temp => temp.Price)
        @Html.TextBoxFor(temp => temp.Price, Model.Price.Value.ToString(), new { @class = "form-control" })
        
    </div>
</div>
<div class="form-row">
    @{string dop = "";
        if (Model.DateOfPurchase != null)
        {
            dop = @Model.DateOfPurchase.Value.ToString("yyyy/MM/dd");
        }
      }
    <div class="form-group  col-md-5">
        @Html.LabelFor(temp => temp.DateOfPurchase)
        @Html.TextBoxFor(temp => temp.DateOfPurchase, dop, new { @class = "form-control" })
        
    </div>

    <div class="form-group  col-md-5">
        @Html.LabelFor(temp => temp.AvailabilityStatus)
        @Html.DropDownListFor(temp => temp.AvailabilityStatus, new List<SelectListItem>() { new SelectListItem { Text = "In Stock", Value = "Instock" } , new SelectListItem { Text = "Out Of Stock", Value = "OutOfStock" }},Model.AvailabilityStatus,new {@class="form-control"})
        


    </div>
        
</div>


<div class="form-row">
    <div class="form-group  col-md-5">
        @Html.LabelFor(temp=>temp.Catagory)
        @Html.DropDownListFor(temp=>temp.Catagory,new SelectList(ViewBag.Categories,"CatagoryID","CatagoryName"), Model.Catagory.CatagoryName, new { @class="form-control"})
        
    </div>

    <div class="form-group  col-md-5">
        @Html.LabelFor(temp=>temp.Brand)
        @Html.DropDownListFor(temp=>temp.Brand,new SelectList(ViewBag.Brands, "BrandID", "BrandName"), Model.Brand.BrandName, new {@class="form-control"})
        
    </div>
</div>

<div class="form-group">
    <div class="form-check">
        <input class="form-check-input" type="checkbox" id="Active" checked="@Model.Active" value="true">
        <label class="form-check-label" for="Active">Active</label>

    </div>
</div>
<button type="submit" class="btn btn-success">Update</button>
<a href="/Product/Index" class="btn btn-danger">Cancel</a>

        }

