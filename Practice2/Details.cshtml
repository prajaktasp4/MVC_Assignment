
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar-expand-sm bg-success navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/product">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/contact">Contact</a>
            </li>
        </ul>
    </nav>


    @{ 
        string StudentResult = null;
        if(ViewBag.StudentMarks>=35)
        {
            StudentResult = "pass";
        }
        else
        {
            StudentResult = "fail";
        }
    }
    <div class="container-fluid">
        <table class="table">


            <tr>
                <td>StudentID</td>
                <td>@ViewBag.StudentId</td>
            </tr>
            <tr>
                <td>Student Name</td>
                <td>@ViewBag.StudentName</td>
            </tr>

            <tr>
                <td>Student Marks</td>
                <td>@ViewBag.StudentMarks</td>
            </tr>
            <tr>
                <td>Result</td>
                <td>@StudentResult</td>
            </tr>

            <tr>
                <td>Semesters</td>
                <td>
                    <ul>
                        @for (int i = 0; i < ViewBag.NoOfSemester; i++)
                        {
                            <li>@i</li>
                        }
                    </ul>
                </td>
            </tr>
            <tr>
                <td>Subjects</td>
                <td>
                    <ul>
                        @foreach (var sub in ViewBag.Subjects)
                        {
                            <li>@sub</li>
                        }
                    </ul>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    @if (StudentResult == "pass")
                    {
                        <div class="text-center">
                            <h1><span class=" text-success"> Congragulations</span></h1>
                        </div>
                    }
                    else
                    {
                        <span class="text-center text-danger">Better Luck Next Time</span>
                    }
                </td>
            </tr>

        </table>
        

    </div>
</body>
</html>
