            <td>@Html.DisplayFor(temp=>item.DateOfPurchase)</td>
            <td>@Html.DisplayFor(temp=>item.AvailabilityStatus)</td>
            <td>@Html.DisplayFor(temp=>item.Catagory.CatagoryName)</td>
            <td>@Html.DisplayFor(temp=>item.Brand.BrandName)</td>
            <td>@Html.DisplayFor(temp=>item.Active)</td>
            <td>
                @Html.ActionLink("Details", "Details",new {id=item.ProductID,Controller="Product"})|
