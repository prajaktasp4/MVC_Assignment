
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar-expand-sm bg-success navbar-dark">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/product">Products</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/contact">Contact</a>
            </li>
        </ul>
    </nav>
    @{ 
        List<int> denomination = new List<int>() { 1000, 500, 100, 10,  1 };
        List<int> C_Count = new List<int>();

        if (ViewBag.Amount > 0)
        {

            var temp_amt = ViewBag.Amount;
            foreach (int c in denomination)
            {
                int curr_count =Convert.ToInt32(temp_amt / c);
                C_Count.Add(curr_count);

                temp_amt = temp_amt - (curr_count * c);

            }
        }
        
     }



    <div class="container-lg">
        <table class="table">
            <thead>
                <tr>
            <th>Denomination</th>
             <th>Count</th>
             <th>Amount</th>
            </tr>
            </thead>
            <tbody>
                @for(int i=0; i<C_Count.Count;i++)
            {
                <tr>
                    <td>
                        @denomination[i]
                    </td>
                    <td>
                        @C_Count[i]
                    </td>
                    <td> @(denomination[i]*C_Count[i])</td>
                </tr>
                
            }

            </tbody>

        </table>

    </div>
</body>
</html>
